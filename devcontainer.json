{
    "name": "studious-chainsaw",
    "dockerFile": "Dockerfile",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-extension-pack",
        "GitHub.copilot",
        "GitHub.copilot-chat"
    ],
    "postCreateCommand": "apt-get update && apt-get install -y cmake g++",
    "remoteUser": "vscode"
}
